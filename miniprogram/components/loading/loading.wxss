.loading {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0rpx auto 0;
    padding: 15px 0;
    width: 220rpx;
    height: 100rpx;
}

.loading view {
    margin: 0 4rpx;
    width: 8rpx;
    /* height: 100%; */
    border-radius: 4rpx;
    background: lightgreen;
    animation: load 1.8s ease infinite;
}

@keyframes load {
    0%,
    100% {
        height: 40rpx;
        background: rgba(255, 255, 255, .3);
    }
    50% {
        height: 80rpx;
        margin: -15rpx 4rpx;
        background: rgba(255, 255, 255, 1);
    }
}

.loading view:nth-child(2) {
    animation-delay: 0.2s;
}

.loading view:nth-child(3) {
    animation-delay: 0.4s;
}

.loading view:nth-child(4) {
    animation-delay: 0.6s;
}

.loading view:nth-child(5) {
    animation-delay: 0.8s;
}

.loading view:nth-child(6) {
    animation-delay: 1s;
}

.loading view:nth-child(7) {
    animation-delay: 1.2s;
}

.loading view:nth-child(8) {
    animation-delay: 1.4s;
}

.loadingArea text {
    display: block;
    padding: 18rpx 0 0 0;
    color: #fff;
    text-align: center;
    font-size: 14rpx;
}